<Ui>
    <Frame
        name="Windfury_HUD_Options_Frame"
        toplevel="true"
        frameStrata="DIALOG"
        hidden="true"
        movable="true"
        enableMouse="true">
        <Size>
            <AbsDimension x="300" y="250"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Backdrop
            bgFile="Interface\DialogFrame\UI-DialogBox-Background"
            edgeFile="Interface\DialogFrame\UI-DialogBox-Border"
            tile="true">
            <BackgroundInsets>
                    <AbsInset left="11" right="12" top="12" bottom="11"/>
            </BackgroundInsets>
            <TileSize><AbsValue val="32"/></TileSize>
            <EdgeSize><AbsValue val="32"/></EdgeSize>
	</Backdrop>
	<Layers>
            <Layer level="ARTWORK">
                <Texture file="Interface\DialogFrame\UI-DialogBox-Header">
                    <Size><AbsDimension x="250" y="64"/></Size>
                    <Anchors>
                        <Anchor point="TOP">
                            <Offset><AbsDimension x="0" y="15"/></Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <FontString inherits="GameFontNormal" text="Windfury HUD">
                    <Anchors>
                        <Anchor point="TOP" relativeTo="$parent"></Anchor>
                    </Anchors>
                </FontString>
            </Layer>
	</Layers>
	<Frames>
            <Button name="$parentButtonClose" inherits="OptionsButtonTemplate" text="Close">
                <Anchors>
                    <Anchor point="BOTTOMRIGHT">
                        <Offset><AbsDimension x="-15" y="16"/></Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick> Windfury_HUD.Options:Hide(); </OnClick>
                </Scripts>
            </Button>
            <CheckButton
                name="$parent_SelfTimerOnlyBtn"
                inherits="OptionsCheckButtonTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parent">
                        <Offset>
                            <AbsDimension x="20" y="-30"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        getglobal(self:GetName().."Text"):SetText("Show Self Timer Only")
                    </OnLoad>
                    <OnClick> Windfury_HUD.Config.SelfTimerOnly = self:GetChecked() </OnClick>
                </Scripts>
            </CheckButton>
            <CheckButton
                name="$parent_ShowPlayerNamesBtn"
                inherits="OptionsCheckButtonTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parent">
                        <Offset>
                            <AbsDimension x="20" y="-70"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        getglobal(self:GetName().."Text"):SetText("Show Player Names")
                    </OnLoad>
                    <OnClick> Windfury_HUD.Config.ShowPlayerNames = self:GetChecked() </OnClick>
                </Scripts>
            </CheckButton>
            <CheckButton
                name="$parent_ShowRemainingTimeBtn"
                inherits="OptionsCheckButtonTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parent">
                        <Offset>
                            <AbsDimension x="20" y="-110"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        getglobal(self:GetName().."Text"):SetText("Show Remaining Time On Buff")
                    </OnLoad>
                    <OnClick> Windfury_HUD.Config.ShowRemainingTime = self:GetChecked() </OnClick>
                </Scripts>
            </CheckButton>
            <CheckButton
                name="$parent_InCombatOnlyBtn"
                inherits="OptionsCheckButtonTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parent">
                        <Offset>
                            <AbsDimension x="20" y="-150"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        getglobal(self:GetName().."Text"):SetText("Show In Combat Only")
                    </OnLoad>
                    <OnClick> Windfury_HUD.Config.InCombatOnly = self:GetChecked() </OnClick>
                </Scripts>
            </CheckButton>
            <CheckButton
                name="$parent_HideAllBtn"
                inherits="OptionsCheckButtonTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parent">
                        <Offset>
                            <AbsDimension x="20" y="-190"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        getglobal(self:GetName().."Text"):SetText("Hide All Displays")
                    </OnLoad>
                    <OnClick> Windfury_HUD.Config.HideAll = self:GetChecked() </OnClick>
                </Scripts>
            </CheckButton>
	</Frames>
        <Scripts>
            <OnLoad>
                Windfury_HUD.OnLoad(self)
            </OnLoad>
            <OnMouseDown>
                self:StartMoving()
            </OnMouseDown>
            <OnMouseUp>
                self:StopMovingOrSizing()
            </OnMouseUp>
        </Scripts>
    </Frame>
</Ui>
